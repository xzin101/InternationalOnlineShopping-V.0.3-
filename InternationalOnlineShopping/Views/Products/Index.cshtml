@model IEnumerable<InternationalOnlineShopping.Models.Product>

@{
    ViewBag.Title = "Index";
}




@if (Session["MemberId"] != null)
{
    <div>
        <h1 style="float:left;"> Welcome <a href="#">@Session["MemberName"]</a></h1>
        <h4> <a href="/Register/Logout" style="float:right;">Logout</a></h4>
    </div>
}

<p style="margin-top:80px;">
    @Html.ActionLink("Add New Product", "Create")
</p>
<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFeatured)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFeatured)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <img src="@Url.Content(item.ProductImage.ToString())" alt="image" width="100" height="100" />
            </td>
            <td>
                <a class="btn btn-primary btn-sm"><i class="fa fa-pencil fa-lg"></i></a>
                <a class="btn btn-danger btn-sm"><i class="fa fa-trash fa-lg"></i></a>
            </td>
        </tr>
    }
</table>

@section scripts{
    <script>
        $(function () {
            let successMessage = '@TempData["SuccessMessage"]'
            if (successMessage)
            {
                alertify.success(successMessage);
            }




    });






    </script>
}